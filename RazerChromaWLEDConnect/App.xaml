<Application x:Class="RazerChromaWLEDConnect.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml" Exit="ShutDown">
    <Application.Resources>
        <SolidColorBrush x:Key="LabelForeground" Color="#FFD62C72"/>

        <Style x:Key="Labels" TargetType="Label">
            <Setter Property="Foreground" Value="#FFD62C72" />
        </Style>
        <Style x:Key="GroupBoxes" TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFD62C72" />
        </Style>
        <Style x:Key="CheckBoxes" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFD62C72" />
        </Style>
        <Style x:Key="RadioButtons" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FFD62C72" />
        </Style>
    </Application.Resources>
</Application>
